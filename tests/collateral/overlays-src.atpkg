;; An overlay sample file

(package
  :name "overlays_src"
  :version "0.1.0-dev"
  :import-packages ["overlays-dst"]

  :overlays {
    :macosx {
      :compile-options ["--macosx-overlays-src"]
      :something "new"
    }
  }

  :tasks {
    :build {
      :tool "lldb-build"
      :name "json-swift"
      :output-type "lib" 
      :source ["src/**.swift" "lib/**.swift"]
      :compile-options ["--task-compile-options"]
      :something "same"
      :use-overlays ["macosx"]
      :overlays {
        :macosx {
          :compile-options ["--macosx-task"]
        }
      }
    }
  }
)

; End of the sample.